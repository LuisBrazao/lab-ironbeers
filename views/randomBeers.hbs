{{#each beer}}
<div class="card mb-3" style="max-width: 900px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img class="card-img" src="{{image_url}}" alt="{{name}}" style="max-height: 500px; max-width: 100px" />
        </div>
        <div class="col-md-8">
            {{>beerpartial this}}
            <p class="card-text"><small class="text-muted">{{tagline}}</small></p>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p class="card-text"> <strong>Brewers tips</strong> {{brewers_tips}}</p>
            {{/each}}
        </div>
    </div>
</div>